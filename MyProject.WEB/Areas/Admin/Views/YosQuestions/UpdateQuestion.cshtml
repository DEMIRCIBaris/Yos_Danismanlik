@model YosQuestionsUpdateDto

<form asp-action="UpdateQuestion" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Soru Başlığı</label>
        <span class="text-danger" asp-validation-for="Name"></span>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="form-group mt-3">
        <label>Üniversite Logosu</label>
        <input type="file" accept=".pdf" class="form-control-file" name="Dosya">
    </div>
    <input type="hidden" name="PictureUrl" value="@Model.DocumentUrl" />
    <button type="submit" class="btn btn-success btn-sm">Kaydet</button>
</form>


@section Scripts{
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}