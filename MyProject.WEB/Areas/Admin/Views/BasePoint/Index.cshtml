@model List<BasePointGetDto>

<a class="btn btn-info btn-sm my-3" asp-action="AddPoint"><i class="fas fa-plus mr-2"></i>Kontejyan Ekle</a>
@if (Model.Count() == 0)
{
    <p class="text-danger"><i class="fas fa-times mr-2"></i> Herhangi bir taban puanı bulunamamıştır</p>
}
else
{
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Bölüm</th>
                <th>1.Derece Şehirler</th>
                <th>2.Derece Şehirler</th>
                <th>3.Derece Şehirler</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="my-auto">
            @foreach (var point in Model)
            {
                <tr>
                    <td class="align-middle">@point.Department</td>
                    <td class="align-middle">@point.FirstCities</td>
                    <td class="align-middle">@point.SecondCities</td>
                    <td class="align-middle">@point.ThirdCities</td>
                    <td class="align-middle">
                        <a class="btn btn-success btn-sm my-1" asp-action="UpdatePoint" asp-route-id="@point.Id"><i class="fas fa-edit mr-1"></i>Güncelle</a>
                        <a class="btn btn-danger btn-sm my-1" asp-action="DeletePoint" asp-route-id="@point.Id"><i class="fas fa-trash mr-1"></i>Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}