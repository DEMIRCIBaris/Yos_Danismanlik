@model List<UniversityGetDto>


<a class="btn btn-info btn-sm my-3" asp-action="AddUniversity"><i class="fas fa-plus mr-2"></i>Üniversite Ekle</a>
@if (Model.Count() == 0)
{
    <p class="text-danger"><i class="fas fa-times mr-2"></i> Herhangi bir üniversite bulunamamıştır</p>
}
else
{
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Üniversite Logosu</th>
                <th>Üniversite Adı</th>
                <th>Şehir</th>
                <th>Tipi</th>
                <th>Başvuru Tarihi</th>
                <th>Sınav Tarihi</th>
                <th>Sonuç Tarihi</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="my-auto">
            @foreach (var type in Model)
            {
            <tr>
                <td class="align-middle">
                    <img width="75" height="75" src="~/Image/@type.PictureUrl" alt="Alternate Text" />
                </td>
                <td class="align-middle">@type.Name</td>
                <td class="align-middle">@type.City.Name</td>
                <td class="align-middle">@type.UniversityType.Name</td>
                <td class="align-middle">@type.BasvuruTarih.ToShortDateString()</td>
                <td class="align-middle">@type.SinavTarihi.ToShortDateString()</td>
                <td class="align-middle">@type.SonucTarihi.ToShortDateString()</td>
                <td class="align-middle">
                    <a class="btn btn-primary btn-sm my-1" target="_blank" href="@type.URL"><i class="fas fa-edit mr-1"></i>Ziyaret Et</a>
                    <a class="btn btn-success btn-sm my-1" asp-action="UpdateUniversity" asp-route-id="@type.Id"><i class="fas fa-edit mr-1"></i>Güncelle</a>
                    <a class="btn btn-danger btn-sm my-1" asp-action="DeleteUniversity" asp-route-id="@type.Id"><i class="fas fa-trash mr-1"></i>Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}

