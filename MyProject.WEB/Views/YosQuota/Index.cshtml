@model List<YosQuotaGetDto>

<main id="main" class="gecici-background">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <h2 class="section-title">YÖS Kontenjanları</h2>
            <div class="text-left">
                <p>
                    2018 YÖS Kontenjanlarını Üniversite Adı / Bölüm Adı / Süre ve Kontenjan olarak liste halinde yayınlıyoruz.<br><br>
                    Arama alanına üniversitenin adı ve ya okumak istediğiniz bölümü yazarak aramalarınızı daraltabilirsiniz..<br><br>
                </p>

                @if (Model.Count() == 0)
                {
                    <p class="text-danger"><i class="fas fa-times mr-2"></i> Herhangi bir üniversite kontejyanı bulunamamıştır</p>
                }
                else
                {
                    <table class="table table-striped table-light table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Üniversite Adı</th>
                                <th>Bölüm</th>
                                <th>Süre</th>
                                <th>Kontejyan</th>
                            </tr>
                        </thead>
                        <tbody class="my-auto">
                            @foreach (var quota in Model)
                            {
                                <tr>
                                    <td class="align-middle">@quota.UniversityName</td>
                                    <td class="align-middle">@quota.Departments</td>
                                    <td class="align-middle">@quota.Time</td>
                                    <td class="align-middle">@quota.Quota</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </section><!-- End Skills Section -->




</main><!-- End #main -->