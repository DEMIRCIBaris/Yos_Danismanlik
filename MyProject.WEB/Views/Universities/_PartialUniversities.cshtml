@model List<UniversityGetDto>


@if (Model.Count() == 0)
{
    <p class="text-danger"><i class="fas fa-times mr-2"></i> Herhangi bir üniversite bulunamamıştır</p>
}
else
{
    <table class="table table-light table-sm table-hover">
        <thead>
            <tr>
                <th>Üniversite Logosu</th>
                <th>Üniversite Adı</th>
                <th>Şehir</th>
                <th>Tür</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="my-auto">
            @foreach (var type in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img width="75" height="75" src="~/Image/@type.PictureUrl" alt="Alternate Text" />
                    </td>
                    <td class="align-middle">@type.Name</td>
                    <td class="align-middle">@type.City.Name</td>
                    <td class="align-middle">@type.UniversityType.Name</td>
                    <td class="align-middle">
                        <a class="btn btn-primary btn-sm my-1" target="_blank" href="@type.URL"><i class="fas fa-edit mr-1"></i>Ziyaret Et</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}