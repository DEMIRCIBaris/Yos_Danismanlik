@model UserSignInDto

<main class="gecici-background p-5">
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <form asp-action="LogIn" method="post" class="w-50 mx-auto my-3 p-2 shadow-lg">
        <h4>Login</h4>
        <div class="form-group my-5">
            <label>Kullanıcı Adı</label>
            <span class="text-danger ml-1" asp-validation-for="UserName"></span>
            <input class="form-control" type="text" asp-for="UserName" />
        </div>
        <div class="form-group">
            <label>Parola</label>
            <span class="text-danger ml-1" asp-validation-for="Password"></span>
            <input class="form-control" type="password" asp-for="Password" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="RememberMe" />
            <label class="form-check-label">Oturumu Açık Tut</label>
        </div>
        <div class="text-danger my-1" asp-validation-summary="ModelOnly"></div>
        <a asp-action="Register" class="btn  btn-success btn-sm">Kayıt Ol</a>
        <button type="submit" class="btn  btn-success btn-sm">Giriş Yap</button>
    </form>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</main>
@section Scripts{
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}