@model UserAddDto

<main  class="gecici-background p-5">
    <br />
    <br />
    <form asp-action="Register" method="post" style="background-color: #AAD6D1;" class="w-50 mx-auto my-3 p-3 shadow">
        <h2>Register</h2>
        <div  class="form-group">
            <label>Kullanıcı Adı</label>
            <span class="text-danger" asp-validation-for="UserName"></span>
            <input class="form-control" type="text" asp-for="UserName" />
        </div>
        <div class="form-group">
            <label>İsim</label>
            <span class="text-danger" asp-validation-for="Name"></span>
            <input class="form-control" type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label>Soyadı</label>
            <span class="text-danger" asp-validation-for="Surname"></span>
            <input class="form-control" type="text" asp-for="Surname" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="form-control" type="email" asp-for="Email" />
        </div>
        <div class="form-group">
            <label>Telefon</label>
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            <input class="form-control" type="tel" asp-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <label>Parola</label>
            <span class="text-danger" asp-validation-for="Password"></span>
            <input class="form-control" type="password" asp-for="Password" />
        </div>
        <div class="form-group">
            <label>Re Parola</label>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            <input class="form-control" type="password" asp-for="ConfirmPassword" />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button class="btn btn-danger btn-block btn-sm mb-3" type="submit">Kayıt Ol</button>
        <a class="btn btn-sm btn-warning btn-block" asp-action="LogIn">Giriş Yap</a>
    </form>
</main>

@section Scripts{
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}