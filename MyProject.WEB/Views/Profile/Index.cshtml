@model List<UniversityGetDto>

<main id="main" class="gecici-background">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <h2 class="section-title">Profil</h2>
            <div>
                Hoşgeldiniz ...
            </div><br>
            <p>Takip etmek istediğiniz Üniversiteleri bulup, takibe alınız.</p>

            <div class="form-row">
                <div class="col-md-6 mb-3">
                    <form class="form-inline">
                        <i class="fas fa-search" aria-hidden="true"></i>
                        <input class="form-control form-control-sm w-75" type="text" placeholder="Search"
                               aria-label="Search">
                    </form>

                    <br>

                    <div class="myscroll">

                        @if (Model.Count() == 0)
                        {
                            <p class="text-danger"><i class="fas fa-times mr-2"></i> Herhangi bir üniversite bulunamamıştır</p>
                        }
                        else
                        {
                            <table class="table table-light table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Üniversite Logosu</th>
                                        <th>Üniversite Adı</th>
                                        <th>Şehir</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="my-auto">
                                    @foreach (var type in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <img width="75" height="75" src="~/Image/@type.PictureUrl" alt="Alternate Text" />
                                            </td>
                                            <td class="align-middle">@type.Name</td>
                                            <td class="align-middle">@type.City.Name</td>
                                            <td class="align-middle">
                                                <a class="btn btn-primary btn-sm my-1" target="_blank" href=""><i class="fas fa-edit mr-1"></i>Ekle</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                    </div>
                </div>

                <div class="col-md-6 mb-3 mt-2">
                    <br><br>

                    <div class="choicetable">

                    </div>

                </div>

            </div>





    </section><!-- End Skills Section -->




</main><!-- End #main -->